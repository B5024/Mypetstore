<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">


    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>MainFormServlet</servlet-name>
        <servlet-class>csu.mypetstoree.web.servlet.MainFormServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>MainFormServlet</servlet-name>
        <url-pattern>/mainForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignOnFormServlet</servlet-name>
        <servlet-class>csu.mypetstoree.web.servlet.SignOnFormServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignOnFormServlet</servlet-name>
        <url-pattern>/signOnForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NewOrderFormServlet</servlet-name>
        <servlet-class>csu.mypetstoree.web.servlet.NewOrderFormServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NewOrderFormServlet</servlet-name>
        <url-pattern>/newOrderForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignOnServlet</servlet-name>
        <servlet-class>csu.mypetstoree.web.servlet.SignOnServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignOnServlet</servlet-name>
        <url-pattern>/signOn</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CategoryFormServlet</servlet-name>
        <servlet-class>csu.mypetstoree.web.servlet.CategoryFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryFormServlet</servlet-name>
        <url-pattern>/categoryForm</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProductFormServlet</servlet-name>
        <servlet-class>csu.mypetstoree.web.servlet.ProductFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductFormServlet</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ItemFormServlet</servlet-name>
        <servlet-class>csu.mypetstoree.web.servlet.ItemFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ItemFormServlet</servlet-name>
        <url-pattern>/item</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterFormServlet</servlet-name>
        <servlet-class>csu.mypetstoree.web.servlet.RegisterFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterFormServlet</servlet-name>
        <url-pattern>/registerForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>csu.mypetstoree.web.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
</web-app>